header.header-area
    .container: .row
        .col-md-6.col-sm-6.col-xs-12.pull-left
            img.img-responsive.logo-img(src='/img/logo.png', alt='')
        .col-md-6.col-sm-6.col-xs-12.pull-right
            .header-right-area
                ul.ul-header
                    li(ng-show='!authenticated')
                        a(ng-href='{{oauthLinks.facebook}}')
                            | Login

                    li(ng-controller='dropdownCtrl', ng-show='authenticated')
                        span.dropdown(dropdown='', on-toggle='toggled(open)')
                            a.dropdown-toggle(href='', dropdown-toggle='')
                                img#avatar(ng-src='{{user.imgUrl}}', alt='')
                                span {{user.name}}
                            ul.dropdown-menu
                                li: a(href='/logout')
                                    span.glyphicon.glyphicon-log-out
                                    | Logout

                    li.case(ng-show='authenticated')
                        a(ng-href='/user/{{user.id}}')
                            img(src='/img/case.png', alt='')
                            |  My Cases
                button(ng-click='createDispute()')
                    span +
                    |  New complaint
section.section-navigation
    .container
        ul.ul-mainmenu
            li: a(ng-class='mkActiveAll()' href='/') All
            li(ng-repeat='category in categories')
                a(ng-class='mkActive(category)', ng-href='/category/{{category}}') {{ category }}
