script#navbar-left(type="text/html")
    ul.nav.navbar-nav
        li: a#all(href="/disputes"): span All
        li: a#relationship(href="/disputes?type=relationship"): span Relationship
        li: a#housing(href="/disputes?type=housing"): span Housing
