doctype html

include mixins/modals

html
    head
        title Kangaroo Court
        block styles
            link(href="/css/bootstrap.css", rel="stylesheet", type="text/css")
            link(href="/css/material.css", rel="stylesheet", type="text/css")
            link(href="/css/style.css", rel="stylesheet", type="text/css")
    body
        nav.navbar.navbar-default.navbar-fixed-top
            div.container#navbar-container
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") Kangaroo Court
                div.collapse.navbar-collapse#navbar
                    div#navbar-left
                    div#navbar-right
        div#content

        block scripts
            script(type='text/javascript', src='/js/vendor.js')
            script(type='text/javascript', src='/js/all.js')

        block templates
            +template-modal-createDispute

            include partials/front
            include partials/dispute
            include mixins/navbar
